{
  "env": {
    "commonjs": true,
    "node": true,
    "jest/globals": true
  },
  "extends": ["standard"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 10
  },
  "plugins": ["@typescript-eslint", "jest"],
  "rules": {
    "@typescript-eslint/strict-boolean-expression": "off",
    "@typescript-eslint/consistent-type-definitions": "off",
    "@typescript-eslint/comma-spacing": "off",
  }
}
